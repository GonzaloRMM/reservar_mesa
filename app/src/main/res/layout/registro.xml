<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC500"
    android:orientation="vertical">

    <EditText
        android:id="@+id/Edit_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="Email" />

    <EditText
        android:id="@+id/Edit_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="Username" />

    <EditText
        android:id="@+id/edit_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_Password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="Repeat password"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <EditText
        android:id="@+id/Edit_Telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/denk_one"
        android:hint="phone number"
        android:inputType="phone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/B_GuardarDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FA7C06"
            android:fontFamily="@font/denk_one"
            android:text="Save"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/B_CerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FC0000"
            android:fontFamily="@font/denk_one"
            android:text="Volver"
            android:textColor="@color/white"></Button>

    </LinearLayout>
</LinearLayout>